    <script type="text/javascript">
        $(document).ready(function () {
            $('.item').slick({
                autoplay: true,/*자동넘김*/
                autoplaySpeed: 10000,/*자동넘김 스피드*/
                slidesToShow: 1,
                slidesToScroll: 1,
                arrows: true,/*화살표*/
                prevArrow: $('#aro1_prev'),/*화살표모양위치정의*/
                nextArrow: $('#aro1_next'),
                swipe: true,
                pauseOnHover: true,

            });

            $(document).ready(function () {
                /*버튼안누르고 클릭하게 해주는기능 */
                $('.prev').hover(function () {
                    $('.item').slick('slickPrev', 'swipe');
                })
                $('.next').hover(function () {
                    $('.item').slick('slickNext', 'swipe');
                })

            })
        })

